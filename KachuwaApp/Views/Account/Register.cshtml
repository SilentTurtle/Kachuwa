@model Kachuwa.Identity.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Signup";
}
 <div class="row justify-content-md-center px-4">
    <div class="col-lg-4 col-md-6 ml-auto mr-auto">
        <h3 class="mb-4">Register</h3>
        <div class="card p-4">
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" class="login100-form validate-form" method="post">
                <div class="form-group">
                    <label>First Name</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Last Name</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label> Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender"></label>
                    <div class="">
                        <select class="form-control" name="Gender">
                            <option>Male</option>
                            <option>Female</option>
                            <option>Other</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input name="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Re-Type Password</label>
                    <input name="ConfirmPassword" class="form-control" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>


                <div class="createaccount-btn">

                    <p>
                        By Creating an account you accept
                        <br>all <a href="/terms-condition">Terms and conditions</a> applied
                    </p>
                    <button type="submit" class="btn btn-primary margin-15">Register</button>
                    <a href="/account/login">Already have an account</a>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/assets/js/validation/_formValidationExtentions.js"></script>
}
