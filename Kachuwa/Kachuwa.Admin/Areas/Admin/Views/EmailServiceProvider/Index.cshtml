@using Kachuwa.Localization
@using Kachuwa.Plugin
@using Kachuwa.Web.Payment
@model IEnumerable<IPlugin>
@inject ILocaleResourceProvider LocaleResource
@{
    LocaleResource.LookUpGroupAt("EmailServiceProvider");
    ViewData["Title"] = LocaleResource.Get("EmailServiceProvider.PageTitle");
}

<section class="container-fluid">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="grid-section">
                <div class="panel module" aria-multiselectable="true">
                    <div class="panel-inner">
                        <div class="panel-heading clearfix">
                            <h2 class="panel-title float-left">@LocaleResource.Get("EmailServiceProvider.PageTitle")</h2>

                            <div class="float-right">
                                <div class="input-group-btn ">
                                    @*<a href="/admin/paymentgateway/new" class="btn btn-primary btn-sm has-mdicon">
                                            <i class="material-icons md-18">add</i>
                                            @LocaleResource.Get("EmailServiceProvider.AddNewButtonText")
                                        </a>*@

                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <table class="table table-hover">
                                <tr>
                                    <th>
                                        <span class="kachuwa-grid-header">@LocaleResource.Get("EmailServiceProvider.Grid.Name")</span>
                                    </th>

                                    <th>
                                        <span class="kachuwa-grid-header">@LocaleResource.Get("EmailServiceProvider.Grid.Version")</span>
                                    </th>
                                    <th>
                                        <span class="kachuwa-grid-header">@LocaleResource.Get("EmailServiceProvider.Grid.Setting")</span>
                                    </th>
                                    <th></th>

                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr data-item="@item.SystemName">
                                        <td>
                                            @item.Configuration.Name
                                        </td>


                                        <td>
                                            @item.Configuration.Version
                                        </td>
                                        <td>
                                            @if (item.Configuration.IsInstalled)
                                            {

                                                <a href="/admin/emailservice/setting?sysName=@item.SystemName"><i class="fa fa-cog"></i></a>
                                            }
                                            else
                                            {
                                                <a href="#" class="disabled"><i class="fa fa-cog"></i></a>

                                            }

                                        </td>


                                    </tr>
                                }

                            </table>

                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



