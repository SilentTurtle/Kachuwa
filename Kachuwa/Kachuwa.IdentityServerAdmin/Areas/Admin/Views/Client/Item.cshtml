        @*             <span asp-validation-for="Claims" class="text-danger"></span> *@
        @*         </div> *@
        @*     </div> *@
        @* </div> *@
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <label>AllowedCorsOrigins<small class="text-muted"> split via newline</small></label>
                    <textarea style="height: 90px;" asp-for="AllowedCorsOrigins" class="form-control" type="text"></textarea>
