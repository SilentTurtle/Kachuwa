@model IdentityServer4.Admin.ViewModels.Role.RoleViewModel

@section breadcrumb{
    <li >
        <a href="#">Create role</a>
    </li>
}

@section header{
    Create role<small v-text="moduleDescription"></small>
}

<div class="col-xs-12">
    <div class="box">
        <form action="/role/create?returnUrl=@ViewData["ReturnUrl"]" method="post">
            @await Html.PartialAsync("_ValidationSummary")
            <div class="box-body">
                @await Html.PartialAsync("Item", Model)
            </div>
            <!-- /.box-body -->
            <div class="box-footer clearfix">
                <button type="submit" class="btn btn-default btn-sm  btn-flat">Submit</button>
            </div>
        </form>
    </div>
    <!-- /.box -->
</div>

@section scripts
{
    <script>
        $(function() {
            app.activeMenu('Role');
        })
    </script>
}