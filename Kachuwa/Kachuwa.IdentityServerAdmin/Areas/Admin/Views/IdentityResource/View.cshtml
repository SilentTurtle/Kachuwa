@model IdentityServer4.Admin.ViewModels.IdentityResource.IdentityResourceViewModel
@{
    var submitUrl = $"{Context.Request.Path}?returnUrl={ViewData["ReturnUrl"]}";
}

@section breadcrumb{
    <li >
        <a href="#">Identity Resource</a>
    </li>
}
@section header{
  Identity Resource<small v-text="moduleDescription"></small>
}
<div class="col-xs-12">
    <div class="box">
        <form action="@submitUrl" method="post">
            @await Html.PartialAsync("_ValidationSummary")
            <div class="box-body">
                @await Html.PartialAsync("Item", Model)
            </div>
            <!-- /.box-body -->
            <div class="box-footer clearfix">
                <button type="submit" class="btn btn-default btn-sm  btn-flat">Submit</button>
            </div>
        </form>
    </div>
    <!-- /.box -->
</div>
@section scripts
{
    <script>
        $(function() {
            app.activeMenu('IdentityResource');
        })
    </script>
}
